<div class="container-fluid" style="margin-top:15px">
    <div class="row">
        <div class="col-md-2 mb-4" id="sidebar">
            {{> adminSidebar}}
        </div>
        <div class="col-md-10 mb-4">
            {{> alerts}}
            <h1>Όλοι οι χρήστες</h1>
            <form method="POST">
                <div class="list-group">
                    {{#each all}}
                    <a class="list-group-item list-group-item-action">
                        {{lastName}}
                        <button class="btn" type="submit" name="userId" value={{_id}}>
                            Διαγραφή χρήστη
                        </button>
                    </a>
                    {{/each}}
                </div>
            </form>
        </div>
    </div>
</div>