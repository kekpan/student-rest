<div class="container">
    <div class="row">
        <div class="col">
            <h1>Αγορές χρήστη</h1>
            <hr>
            {{#each purchases}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{#each this.items}}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{this.item.title}} | Ποσότητα: {{this.qty}}
                            <span class="badge badge-primary badge-pill">{{this.price}}</span>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer mb-4"><strong>{{this.cart.totalPrice}} euros - Payment Id: {{paymentId}}</strong></div>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{#if user.coupons}}
                <ul>
                    <li>Breakfast: {{user.coupons.breakfast}}</li>
                    <li>Lunch: {{user.coupons.lunch}}</li>
                    <li>Dinner: {{user.coupons.dinner}}</li>
                </ul>
            {{/if}}
        </div>
    </div>
</div>