<div class="container">
    <div class="row justify-content-center">
        <div class="px-2" style='max-width: 720px;'>
            <a href="/">
                <img class="w-100 mt-5 mb-3 mx-auto d-block" src="images/student-rest-logo.png" style="max-width: 345px;">
            </a>
            {{> alerts}}
            <div id="alert" class="alert alert-danger my-3 p-2" role="alert" style="display: none;"></div>
            <h2>Checkout</h2>
            <h5>Συνολικό κόστος: {{totalPrice}} euros</h5>
            <form method="POST" action="/coupons/checkout" class="mb-5" id="payment-form">
                <div class="form-group">
                    <div class="input-group">
                        <label for="card-name">Όνομα κατόχου</label>
                        <input type="text" class="form-control" id="card-name" name="card-name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <label for="card-number">Αριθμός κάρτας</label>
                        <input type="text" class="form-control" id="card-number" name="card-number">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <label for="card-expiry-month">Μήνας λήξης κάρτας</label>
                        <input type="text" class="form-control" id="card-expiry-month" name="card-expiry-month">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <label for="card-expiry-year">Έτος λήξης κάρτας</label>
                        <input type="text" class="form-control" id="card-expiry-year" name="card-expiry-year">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <label for="card-cvc">CVC</label>
                        <input type="password" class="form-control" id="card-cvc" name="card-cvc">
                    </div>
                </div>
                <button type="submit" class="btn w-100">Αγορά</button>
            </form>
        </div>
    </div>
</div>

<script src="https://js.stripe.com/v2/"></script>
<script src="scripts/checkout.js" defer></script>
