<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="p-0 mx-2 w-100 border-bottom" style="background-color: #f5f5f5; max-width: 760px;">
            <div class="container-fluid">
                <div class="row shadow-sm">
                    <div class="col-sm-9 d-flex justify-content-start">
                        <h3 class="p-4 mb-0 w-100">Ανακοινώσεις</h3>
                    </div>
                    <div class="col-sm-3 my-1 d-flex justify-content-end align-items-center">
                        {{#if (userIsSec user.userType user.department)}}
                        <a href="/anncmnts/add" class="btn" id="newAnncmnt">Νέα Ανακοίνωση</a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="mx-2 my-0 w-100" style="max-width: 760px;">
            {{> alerts}}
        </div>
    </div>
    {{#each anncmnts}}
    <div class="row justify-content-center">
        <div class="px-2 pt-4 pb-2 mx-2 w-100 border-bottom bg-white" style="max-width: 760px;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-2 mb-2 d-flex justify-content-center text-center">
                        <div class="mt-1 px-1 py-3 text-white rounded-lg d-flex align-items-center justify-content-center" style="background-color: #d7a760; font-size:x-large; width: 100%; min-width: 68px; height: 40px;">{{dmFormat modifiedAt}}</div>
                    </div>
                    <div class="col-sm-10">
                        <a id="anncmnt-title" href={{joinStr '/anncmnts/' id}}><h5 class="text-uppercase mb-0">{{title}}</h5></a>
                        <small class="text-muted">
                            <svg class="bi bi-calendar3" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z"/>
                                <path fill-rule="evenodd" d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                            </svg>
                            {{dmyTimeFormat modifiedAt}}
                        </small>
                        <p class="text-justify">{{slice body}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>